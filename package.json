{
  "name": "markdown-wordpress-publisher",
  "version": "1.0.0",
  "description": "Desktop app for publishing Markdown files to WordPress",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "keywords": [
    "markdown",
    "wordpress",
    "publisher",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "crypto": "^1.0.1",
    "fs-extra": "^11.1.1",
    "marked": "^9.1.2",
    "yaml": "^2.3.2"
  },
  "build": {
    "appId": "com.yourcompany.markdown-wordpress-publisher",
    "productName": "Markdown WordPress Publisher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "identity": null
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
